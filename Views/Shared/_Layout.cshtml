    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
      }
    <aside id="aside" class="collapsed">
      <ul class="sidebar-nav p-0">
        <li class="sidebar-item">
          @{
              var homeActive = (currentController == "Home" && currentAction == "Index") ? "active" : "";
          }
          <a href="@Url.Action("Index", "Home")" class="sidebar-link @homeActive">
            <span>Home</span>
            <i class="bi bi-house"></i>
          </a>
        </li>
        <li class="sidebar-item">
          @{
              var documentosActive = (currentController == "Documento" && currentAction == "Index") ? "active" : "";
          }
          <a href="@Url.Action("Index", "Documento")" class="sidebar-link @documentosActive">
            <span>Documentos</span>
            <i class="bi bi-file-earmark"></i>
          </a>
        </li>
        <li class="sidebar-item">
          @{
              var sobreActive = (currentController == "Home" && currentAction == "Privacy") ? "active" : "";
          }
          <a class="sidebar-link" data-bs-toggle="modal" data-bs-target="#staticBackdrop" @sobreActive">
            <span>Sobre</span>
            <i class="bi bi-info-circle"></i>
          </a>
        </li>
      </ul>
    </aside>
  </div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Sobre</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1>LOGO</h1>
